{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API for Personal Finance Tracker",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "set NODE_ENV=test&& node --experimental-vm-modules ../node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "set NODE_ENV=test&& node --experimental-vm-modules ../node_modules/jest/bin/jest.js --watch",
    "test:coverage": "set NODE_ENV=test&& node --experimental-vm-modules ../node_modules/jest/bin/jest.js --coverage --runInBand",
    "test:integration": "set NODE_ENV=test&& node --experimental-vm-modules ../node_modules/jest/bin/jest.js --testPathPattern=integration --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "api",
    "finance",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.14.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.4",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "preset": "@shelf/jest-mongodb",
    "testEnvironment": "node",
    "transform": {},
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
